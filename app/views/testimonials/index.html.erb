<!--********************************************Testimonials*************************-->
<div class="Test-wrapper">
        <h1>Testimonials</h1>

        <% @testimonials.each do |testimonial| %>
        <table>
          <tr>
            <td><small><%= testimonial.date.strftime("%B %d, %Y") %></small></td>
          </tr>
          <tr>
            <td colspan="6" class="post">" <%= testimonial.post%>"</td>
          </tr>
          <tr>
            <td class="name"> - <%= testimonial.name%></td>
          </tr>


        </table>
            <div class="links">
                <%= link_to 'Show', testimonial %>
                <%= link_to 'Edit', edit_testimonial_path(testimonial) %>
                <%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %>
             </div>
        <hr>
         <% end %>
        <br>

    <%= link_to 'New Testimonial', new_testimonial_path %>
